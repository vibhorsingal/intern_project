    <script src="https://code.jquery.com/jquery-3.2.1.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <div class="wrapper">
        <div class="formWrapper">
            <h3 class="text-center"><i class="fas fa-sign-in-alt"></i>Reset Password</h3>
            <form action="/sendOtp" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <button type="submit" class="btn btn-danger" id="sendOTP">Send OTP</button>
            </form>
            <h6>Have an account? <a href="/">Login</a></h6>
            <h6>No Account? <a href="/register">Register</a></h6>
            
        </div>
    </div>
</body>

</html>